#!/usr/bin/env bash
# Init script to manage the manage_my_process script

PIDFILE="/var/run/my_process.pid"
PROCESS_SCRIPT="/full/path/to/alu-shell/processes_and_signals/manage_my_process"  # Replace with absolute path

start() {
  "$PROCESS_SCRIPT" &
  echo $! > "$PIDFILE"
  echo "manage_my_process started"
}

stop() {
  if [ -f "$PIDFILE" ]; then
    PID=$(cat "$PIDFILE")
    kill "$PID" 2>/dev/null
    rm -f "$PIDFILE"
    echo "manage_my_process stopped"
  else
    echo "manage_my_process not running"
  fi
}

restart() {
  stop
  start
  echo "manage_my_process restarted"
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    ;;
esac

